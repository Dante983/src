{% block content %}
    <div class="container">
        <h1>Blog Posts</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Content</th>
                </tr>
            </thead>
            <tbody>
                {% for blogPost in blogPosts %}
                    <tr>
                        <td>{{ blogPost.id }}</td>
                        <td>{{ blogPost.title }}</td>
                        <td>{{ blogPost.content }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
