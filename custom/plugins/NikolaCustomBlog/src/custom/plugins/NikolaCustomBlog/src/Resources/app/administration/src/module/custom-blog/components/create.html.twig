{# src/Resources/views/admin/blog/create.html.twig #}

{% block content %}
    <div class="container">
        <h1>Create Blog Post</h1>
        <form @submit="onCreateBlogPost">
            <label for="title">Title:</label>
            <input type="text" id="title" v-model="newBlogPost.title" required>
            <br>
            <label for="content">Content:</label>
            <textarea id="content" v-model="newBlogPost.content" required></textarea>
            <br>
            <button type="submit">Create</button>
        </form>
    </div>
{% endblock %}
